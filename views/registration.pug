doctype html
html
  head
    title User Registration
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/css/register.css")
  body
    .register-container
      h2.register-title Register

      form#register-form(action='/register' method='post')
        
        // Email error message placeholder
        p.error-message#email-error

        .form-group
          input#email.input-field(type='email' name='email' placeholder=" " required)
          label.input-label(for='email') Email
          i(class="fa fa-envelope icon")
        
        .form-group
          // Add this line for password error placeholder
          p.error-message#password-error
          input#password.input-field(type='password' name='password' placeholder=" " required)
          label.input-label(for='password') Password
          i(class="fa fa-lock icon")

        button#register-button.button(type='submit') Register
      
      p.have-account Have an account? 
        a(href='/login') Sign in

    script(src='/checkemail.js')
    script(src='/register.js')
